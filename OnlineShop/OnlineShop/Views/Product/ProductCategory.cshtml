@model List<Model.EF.Product>
@{
    ViewBag.Title = "ProductCategory";
    Layout = "~/Views/Shared/_Layuot.cshtml";
    var category = (Model.EF.ProductCategory)ViewBag.Category;
}

    <div class="content">
        <div class="content_top">
            <div class="heading">
                <h3>@category.Name</h3>
            </div>
            <div class="see">
                <p><a href="/san-pham">Tất cả Sản Phẩm</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
            @foreach (var item in Model)
            {
                var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                <div class="grid_1_of_4 images_1_of_4">
                    <a href="@url"><img src="@item.Images" alt=""></a>
                    <h2>Lorem Ipsum is simply </h2>
                    <div class="price-details">
                        <div class="price-number">
                            <p><span class="rupees">@(item.Price.HasValue?item.Price.Value.ToString("N0"):"Liên hệ")</span></p>
                        </div>
                        <div class="add-cart">
                            <h4><a href="/them-vao-gio?productID=@item.ID&quantityN=1">Thêm vào giỏ</a></h4>
                        </div>
                        <div class="clear"></div>
                    </div>

                </div>
            }
        </div>
    </div>

